<div class="landing">
  <div class="container">
    <nav class="menu navbar navbar-expand-lg">
      <a class="navbar-brand ml-3" href="/">Restaurant ABH</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="menu__items navbar-nav ml-auto">
          <a class="nav-item nav-link active mr-5" href="/">Home <span class="sr-only">(current)</span></a>
          <a class="nav-item nav-link mr-5" href="/restaurants">Restaurants</a>
          {{login-buttons loggedIn=loggedIn user=user logOut="logout"}}
          <a {{action "goToMap"}} class="nav-item nav-link mr-5" href="#">Map</a>
        </div>
      </div>
    </nav>
  </div>

  <div class="landing__header">
    <h1>Make a free reservation</h1>
    <p><b>Choose your table from {{numberOfRestaurants}} restaurants near you</b></p>
  </div>

  {{landing-search-bar searchTable='searchTable'}}

</div>

<div class="popular mt-5 container">
  <h2 class="mt-5 mb-5 text-center">Restaurants Near Your Location</h2>
  <div class="row">
    {{#each (range 0 6) as |index|}}
      {{restaurant-card-reservation 
        restaurant=(get-array-value popularRestaurants index)}}
    {{else}}
      <div class="alert alert-warning col-12 text-center" role="alert">
        There are currently no restaurants available
      </div>
    {{/each}}
  </div>
</div>

<div class="specials pb-5 pt-5">
  <h2 class="text-center mb-5">Cuisines</h2>
  <div id = "specials__slider" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="specials__slider__container container">
          <div class="specials__row form-inline pt-5">
            {{#each (range 0 3) as |index|}}
              {{special-meal-card
                cousine=(get-array-value cousinesCarousel index)}}
            {{/each}}
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <div class="specials__slider__container container">
          <div class="specials__row form-inline pt-5">
            {{#each (range 3 6) as |index|}}
              {{special-meal-card
                cousine=(get-array-value cousinesCarousel index)}}
            {{else}}
              <div class="alert alert-warning col-12 text-center" role="alert">
                There are currently no specials.
              </div>
            {{/each}}
          </div>  
        </div>
      </div>
      <div class="carousel-item">
        <div class="specials__slider__container container">
          <div class="specials__row form-inline pt-5 pl-sm-5 pl-md-5">
            {{#each (range 6 9) as |index|}}
              {{special-meal-card
                cousine=(get-array-value cousinesCarousel index)}}
            {{else}}
              <div class="alert alert-warning col-12 text-center" role="alert">
                There are currently no specials.
              </div>
            {{/each}}
          </div>  
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#specials__slider" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#specials__slider" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<div class="container">
  {{popular-locations popularLocations=popularLocations}}
</div>